<p id="notice"><%= notice %></p>

<h1>Imagens</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.description %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'small', small_images_path(image) %></td>
        <td><%= link_to 'medium', medium_images_path(image) %></td>
        <td><%= link_to 'large', large_images_path(image) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Gerar novamente imagens', new_image_path %>
